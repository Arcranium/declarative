{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "types": ["node"],
    "baseUrl": "./",
    "paths": {
      "@lib/*": ["src/declarative/*"],
      "@src/*": ["src/*"]
    }
  },
  "include": [
    "src/declarative/*.ts",
    "src/declarative/*.d.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
